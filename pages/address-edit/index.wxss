.ads-edit-page {
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  position: relative;
  height: 100vh;
  width: 100%;
}
.ads-row {
  display: flex;
  line-height: 80rpx;
  height: 80rpx;
  border-bottom: 1px solid #f1f1f1;
  background-color: white;
  padding: 0 20rpx;
}
.ads-lable {
  width: 200rpx;
}
.ads-row > input {
  height: 100%;
}
.ads-default {
  display: flex;
  background-color: white;
  margin-top: 30rpx;
  justify-content: space-between;
  padding: 20rpx 20rpx;
  align-items: center;
}
.ads-default-lable {
  display: flex;
  flex-direction: column;
}
.ads-default-lable > text:last-child {
  font-size: 12px;
  color: #aaa;
  margin-top: 10px;
  line-height: 40rpx;
}
.ipt-placeholder {
  color: #ddd;
}
.btn-edit {
  position: absolute;
  width: 600rpx;
  left: 0;
  right: 0;
  color: white;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  margin: 0 auto;
  border-radius: 50rpx;
  font-weight: 700;
  font-size: 16px;
  background-color: var(--themeColor);
  bottom: 220rpx;
}
.btn-del {
  position: absolute;
  width: 600rpx;
  left: 0;
  right: 0;
  color: black;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  margin: 0 auto;
  border-radius: 50rpx;
  font-weight: 700;
  font-size: 16px;
  background-color: #eee;
  bottom: 80rpx;
}
