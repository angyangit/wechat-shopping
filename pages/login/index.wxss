.login-warpper {
  width: 100%;
  height: 100%;
  position: fixed;
  box-sizing: border-box;
  background-color: white;
}
.login-content {
  width: 100%;
  box-sizing: border-box;
  padding: 20px 20px;
}
.title {
  font-size: 24px;
  font-weight: 700;
  text-align: center;
  margin-top: 10px;
}
.ipt {
  margin-top: 30px;
  width: 100%;
  border: 0;
  border-bottom: 1px solid #ddd;
  font-size: 15px;
  padding-bottom: 10px;
  line-height: 50px;
  height: 50px;
  outline: none;

  box-sizing: border-box;
}
.ipt:focus {
  caret-color: var(--themeColorLight);
}
.placeholder{
  color: #ddd;
}
.login-error {
  font-weight: 700;
  font-size: 16px;
  color: var(--themeColorLight);
  margin-top: 20px;
}
.btn-login {
  display: block;
  margin-top: 30px;
  width: 100%;
  display: block;
  background-color: #efefef;
  border-radius: 20px;
  font-size: 18px;
  color: #fff;
  font-weight: 700;
  background-image: -webkit-linear-gradient(
    left,
    #fab3b3,
    #ffbcb3 73%,
    #ffcaba
  );
  background-image: -o-linear-gradient(
    left,
    #fab3b3 0,
    #ffbcb3 73%,
    #ffcaba 100%
  );
  background-image: linear-gradient(90deg, #fab3b3, #ffbcb3 73%, #ffcaba);
  -webkit-box-shadow: 0 5px 20px 0 rgba(255, 62, 62, 0.2);
  box-shadow: 0 5px 20px 0 rgba(255, 62, 62, 0.2);
  text-align: center;
}
.btn-login-active {
  background-image: -webkit-linear-gradient(
    left,
    #f10000,
    #ff2000 73%,
    #ff4f18
  );
  background-image: -o-linear-gradient(left, #f10000, #ff2000 73%, #ff4f18);
  background-image: linear-gradient(90deg, #f10000, #ff2000 73%, #ff4f18);
}
