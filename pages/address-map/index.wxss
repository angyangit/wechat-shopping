.map-page {
  position: relative;
  height: 100vh;
}
#map {
  position: relative;
  width: 100%;
  height: 300px;
}
.map-panel {
  position: absolute;
  width: 100%;
  background-color: white;
  top: 300px;
  left: 0;
  bottom: 0;
  right: 0;
  display: flex;
  flex-direction: column;
  padding: 0 10px;
  box-sizing: border-box;
}
.map-scroll {
  flex-grow: 1;
  height: 100%;
}
.map-search {
  position: relative;
  background-color: #eee;
  height: 34px;
  margin: 10px 0;
  flex-shrink: 0;
}
.map-tip {
  position: absolute;
  line-height: 34px;
  left: 40%;
}
.map-search > .serch-ipt {
  width: 100%;
  line-height: 34px;
  height: 34px;
  text-align: center;
  box-sizing: border-box;
}

.cover-image {
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  left: 10px;
  top: 15px;
}

.cover-image_location {
  width: 80rpx;
  height: 80rpx;
  position: absolute;
  right: 10px;
  bottom: 35px;
}
.location-title {
  line-height: 30px;
  font-weight: 700;
  font-size: 16px;
}
.location-des {
  font-size: 14px;
  line-height: 30px;
}
