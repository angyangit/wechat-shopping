.count-wrapper {
  width: 100%;
  display: flex;
  align-items: center;
}
.reduce {
  font-size: 20px;
  font-weight: 800;
  padding: 5px 8px;
  color: #333333;
}
.stop-reduce {
  color: #dddddd;
}
.add {
  font-weight: 800;
  font-size: 16px;
  padding: 5px 8px;
  color: #333333;
}
.count-ipt {
  border: 0;
  width: 40px;
  font-size: 14px;
  padding: 2px 0;
  outline: none;
  text-align: center;
  box-sizing: border-box;
  vertical-align: middle;
  background-color: #eee;
}
