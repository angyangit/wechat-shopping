.goods-list-comp {}

.mul-content {
    display: flex;
    flex-wrap: wrap;
    padding-right: 10px;
    margin-top: -10px;
}

.mul-item-wrapper {
    width: 50%;
    flex-shrink: 0;
    padding: 10px 0 0 10px;
    box-sizing: border-box;
}

.mul-item {
    background-color: white;
    border-radius: 15rpx;
    overflow: hidden;
}

.multiple-img {
    width: 100%;
    height: 175px;
}

.multiple-name {
    box-sizing: border-box;
    height: 31PX;
    font-size: 13PX;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    word-break: break-all;
    color: #1a1a1a;
    margin-top: 5px;
    line-height: 16PX;
    font-weight: 600;
    margin-bottom: 3px;
    padding: 0 4px;
}

.multiple-price-wrapper {
    height: 25px;
    position: relative;
    width: 100%;
    overflow: hidden;
}

.multiple-price {
    top: 0;
    color: #fa2c19;
    display: inline-block;
    padding: 0 5px 0 4px;
    position: relative;
    vertical-align: top;
    height: 25px;
    line-height: 25px;
    font-size: 16PX;
    font-weight: 800;
}

.multiple-tip {
    font-size: 10px;
    border: 0.5PX solid #fa2c19;
    color: #fa2c19;
    height: 25px;
    line-height: 25px;
    vertical-align: top;
    border-radius: 4px;
}

.multiple-like {
    display: block;
    position: absolute;
    right: -5px;
    top: 4px;
    text-align: center;
    color: grey;
    font-size: 10PX;
    vertical-align: top;
    height: 18px;
    line-height: 18px;
    padding: 0 4px;
    background-color: #f0f2f5;
    border-radius: 10px;
}

.multiple-ori-price {
    color: #ccc;
    padding: 0 5px 10px 4px;
    font-size: 14PX;
    font-family: JDZhengHT-EN-Regular;
}

.single-content {
    background: white;
    box-sizing: border-box;
    display: flex;
}

.single-content::after {
    content: '';
    width: 72%;
    position: absolute;
    height: 1px;
    right: 0;
    display: inline-block;
    background: #eee;
}

.single-img {
    width: 30%;
    height: 100px;
    padding: 10px;
    flex-shrink: 0;
}

.single-info {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
